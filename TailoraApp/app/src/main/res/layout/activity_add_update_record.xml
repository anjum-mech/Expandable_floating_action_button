<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddUpdateRecordActivity">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profileIv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_action_name"
        app:civ_border_color="#C8F9FF"
        app:civ_border_width="1dp"
        app:civ_shadow="true"
        app:civ_shadow_radius="0dp"
        app:civ_border="true"
        app:civ_shadow_color="#F80255"
        android:layout_marginTop="15dp"
      />
    <EditText
        android:id="@+id/nameEt"
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileIv"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:hint="@string/name"
        android:layout_marginLeft="20dp"
        android:autofillHints="@string/name"
        android:inputType="textPersonName|textCapWords"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/phoneEt"
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameEt"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:hint="@string/mob_number"
        android:layout_marginLeft="20dp"
        android:autofillHints="@string/mob_number"
        android:inputType="phone"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/dobEnterEt"
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneEt"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:hint="@string/dob_dd_mm_yyyy"
        android:layout_marginLeft="20dp"
        android:autofillHints="@string/mob_number"
        android:inputType="date"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/dobReligajEt"
        android:layout_width="match_parent"
        android:background="@drawable/shape"
        android:layout_height="wrap_content"
        android:layout_below="@id/dobEnterEt"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:hint="@string/dob_dd_mm_yyyy"
        android:layout_marginLeft="20dp"
        android:autofillHints="@string/mob_number"
        android:inputType="date"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/bioEt"
        android:minHeight="90dp"
        android:background="@drawable/shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dobReligajEt"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:hint="@string/description"
        android:layout_marginLeft="20dp"
        android:autofillHints="@string/mob_number"
        android:inputType="textCapSentences|textMultiLine"
        android:padding="10dp"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveBtn"
        app:rippleColor="#5C03FA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:src="@drawable/ic_action_done"
        />

</RelativeLayout>